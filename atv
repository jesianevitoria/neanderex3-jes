            IN          ; lê o primeiro número
            STO NUM1    ; armazena em NUM1
            IN          ; lê o segundo número
            STO NUM2    ; armazena em NUM2

            LDA NUM1    ; carrega NUM1
            ADD NUM2    ; soma NUM2
            OUT         ; mostra o resultado

            HLT         ; fim do programa

NUM1:       DAT 0
NUM2:       DAT 0
